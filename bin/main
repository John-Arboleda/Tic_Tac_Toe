#!/usr/bin/env ruby

class Player
  attr_reader :name
  attr_reader :marker
  def initialize(name, marker)
    @name = name
    @marker = marker
  end

  def print_name
    puts "#{@name}"
  end

  def marker
    puts "#{@marker}"
  end

end

#puts "Enter player 1 name"
#player_1_name = Player.new(gets.chomp,"X")
#puts "Enter player 2 name"
#player_2_name = Player.new(gets.chomp,"O")

class Board 
  attr_accessor :plays_array
  def initialize (plays_array)
    @plays_array=plays_array
  end

  def print_board 
    col_separator, row_separator = " | ", " ----+---+----"
    puts row_separator
    3.times do |i|
        print col_separator
        3.times { |j| print plays_array[j+(i*3)].to_s << col_separator}
        puts "\n" << row_separator
    end
  end
end

